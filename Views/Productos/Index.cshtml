@model IEnumerable<Distribuidora.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Foto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockActual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.FotoUrl))
                {
                    <img src="@item.FotoUrl" alt="Foto de @item.Nombre" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                }
                else
                {
                    <img src="~/images/placeholder.png" alt="Sin imagen" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockActual)
            </td>
            <td>
                @(item.Proveedor?.RazonSocial ?? "N/A")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br>

@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="PaginaciÃ³n">
        <ul class="pagination justify-content-center">
            @{
                int paginaActual = ViewBag.PaginaActual;
                int totalPaginas = ViewBag.TotalPaginas;

                <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual - 1)">Anterior</a>
                </li>

                @for (int i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaActual ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                    </li>
                }

                <li class="page-item @(paginaActual >= totalPaginas ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual + 1)">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
}